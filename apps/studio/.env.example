# Application
NODE_ENV=development
LOG_LEVEL=debug

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_USE_TLS=false
REDIS_ALLOW_INSECURE_TLS=false
# Optional: Custom CA certificate for self-signed certs (base64 encoded)
# REDIS_CA_CERT=
# Optional: Client certificate for mutual TLS (base64 encoded)
# REDIS_CLIENT_CERT=
# REDIS_CLIENT_KEY=

# OpenTelemetry Tracing
OTEL_ENABLED=true
OTEL_SERVICE_NAME=studio
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_TRACE_SAMPLE_RATE=0.1  # 10% sampling in production, 1.0 for 100% in dev

# Database
PG_META_CRYPTO_KEY=your-encryption-key-here

# Session Cache
# (No additional config needed - uses REDIS_URL)
