{
  "name": "@security/crypto",
  "version": "0.2.0-alpha",
  "description": "ZKEB Cryptography Library - HKDF (RFC 5869) + AES-256-GCM (NIST SP 800-38D)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "bench:hkdf": "jest --testNamePattern='HKDF.*Performance Benchmark'",
    "bench:aes-gcm": "jest --testNamePattern='AES-256-GCM.*Performance Benchmark'",
    "bench": "jest --testNamePattern='Performance Benchmark'",
    "lint": "eslint src __tests__",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "hkdf",
    "kdf",
    "key-derivation",
    "rfc5869",
    "aes-256-gcm",
    "aes",
    "gcm",
    "encryption",
    "authenticated-encryption",
    "nist",
    "cryptography",
    "webcrypto",
    "zkeb"
