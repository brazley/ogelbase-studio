# Railway Environment Variables
# Copy this to .env for local development

# Node environment
NODE_ENV=production

# Kong Configuration
PORT=8000
KONG_DATABASE=off
KONG_DECLARATIVE_CONFIG=/app/kong.yml
KONG_PROXY_LISTEN=0.0.0.0:8000
KONG_ADMIN_LISTEN=0.0.0.0:8001
KONG_LOG_LEVEL=info

# Ogelfy Upstream URLs (set by Railway)
# Format: https://{service-name}-{environment}.up.railway.app
OGELFY_URL=https://ogelfy-1.up.railway.app
OGELFY_1_URL=ogelfy-1.up.railway.app
OGELFY_2_URL=ogelfy-2.up.railway.app
OGELFY_3_URL=ogelfy-3.up.railway.app

# Optional: Redis for distributed rate limiting
REDIS_HOST=redis.railway.internal
REDIS_PORT=6379
REDIS_PASSWORD=

# Optional: External logging endpoint
LOG_ENDPOINT=https://your-logging-service.com/logs
